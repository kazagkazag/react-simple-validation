{
    "name": "react-simple-validation",
    "version": "2.1.0",
    "description": "",
    "main": "./dist/index.js",
    "types": "./index.d.ts",
    "scripts": {
        "test": "jest ./src",
        "watch": "watch \"npm run lint && npm run test\" ./src",
        "lint": "tslint './src/**/*.ts' './src/**/*.tsx'",
        "prepublish": "npm run build",
        "clean-dist": "npm run remove-dist && mkdir dist",
        "remove-dist": "rimraf ./dist",
        "prebuild": "npm run clean-dist && npm run lint -- --fix && npm run test",
        "build": "tsc --project tsconfig.json"
    },
    "author": "kamil.zagrabski@gmail.com",
    "license": "ISC",
    "dependencies": {
        "@types/lodash.get": "4.4.3",
        "@types/lodash.set": "4.3.3",
        "lodash.get": "4.4.2",
        "lodash.set": "4.3.2"
    },
    "devDependencies": {
        "@types/core-js": "0.9.43",
        "@types/enzyme": "2.8.9",
        "@types/jest": "21.1.1",
        "@types/react": "16.0.7",
        "@types/react-dom": "15.5.5",
        "awesome-typescript-loader": "3.2.3",
        "core-js": "2.5.1",
        "enzyme": "3.0.0",
        "enzyme-adapter-react-16": "^1.0.0",
        "es6-promise": "4.1.1",
        "jest": "21.2.1",
        "jsdom": "11.3.0",
        "react": "16.0.0",
        "react-dom": "16.0.0",
        "react-test-renderer": "16.0.0",
        "rimraf": "2.6.2",
        "ts-jest": "21.0.1",
        "tslint": "5.7.0",
        "typescript": "3.2.2",
        "webpack": "3.6.0",
        "webpack-bundle-analyzer": "2.9.0"
    },
    "jest": {
        "verbose": true,
        "setupFiles": [
            "<rootDir>/tools/testSetup.js"
        ],
        "transform": {
            "^.+\\.tsx?$": "<rootDir>/tools/jest-preprocessor.js"
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json",
            "jsx"
        ],
        "moduleDirectories": [
            "node_modules",
            "./"
        ]
    }
}
