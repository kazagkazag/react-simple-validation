{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
            "shared/*": ["src/shared/*"]
        },
        "experimentalDecorators": true
    },
    "include": [
        "./src/**/*"
    ]
}